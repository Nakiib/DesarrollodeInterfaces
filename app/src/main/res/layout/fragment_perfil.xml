<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".PerfilFragment">

        <Button
            android:id="@+id/btncerrarlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
             />

        <TextView
            android:id="@+id/idnombre"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:editable="false"
            android:text="Diego Pérez"
             />

        <TextView
            android:id="@+id/idnick"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:editable="false"
            android:text="dperez14"
            />

        <TextView
            android:id="@+id/idies"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:editable="false"
            android:text="IES Juan de la Cierva"
          />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="159dp"
            android:layout_height="167dp"
            android:src="@drawable/ftperfil"
         />

        <Button
            android:id="@+id/button2"
            android:layout_width="183dp"
            android:layout_height="49dp"
            android:text="Mis apuntes"
         />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="apuntes que sigo"
            />

</LinearLayout>